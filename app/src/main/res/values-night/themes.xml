<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcoolOuGasolina" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cinza</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CB584C</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:backgroundTint">#054047</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="background">
    <item name="android:background">@color/dark</item>
    <item name="android:backgroundTint">@color/dark</item>
    </style>
    <style name="listbackground">
        <item name="android:backgroundTint">@color/darkfra</item>

    </style>
    <style name="textocor">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>